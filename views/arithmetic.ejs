<%- include("partials/head") %>

<section class="container bg-dark mt-3 p-5 text-light text-center">
    <h2>Arithmetic Calculator</h2>

    <form action="/arithmetic" method="post">
        <div class="row g-3">
            <div class="col-sm-5">
                <label for="num1" class="form-label">Number 1</label>
                <input
                    type="text" 
                    class="form-control"
                    name="num1"
                    id="num1"
                    placeholder="First Number"
                    value="<%=num1?num1:``; %>"
                    pattern="[\.\d]+"
                    title="Please enter a number!"
                    required
                />
            </div>
            <div class="col-sm-2">
                <select name="operator" class="form-select" id="">
                    <option value="add" <%=operator==="add"?`selected`:``%> >plus</option>
                    <option value="sub" <%=operator==="sub"?`selected`:``%>>minus</option>
                    <option value="mul" <%=operator==="mul"?`selected`:``%>>times</option>
                    <option value="div" <%=operator==="div"?`selected`:``%>>divided by</option>
                    <option value="exp" <%=operator==="exp"?`selected`:``%>>raised to</option>
                    <option value="mod" <%=operator==="mod"?`selected`:``%>>modulus</option>
                </select>
            </div>
            <div class="col-sm-5">
                <input
                    type="text"
                    class="form-control"
                    name="num2"
                    placeholder="Last Number"
                    value="<%=num2?num2:``;%>"
                    pattern="[\.\d]+"
                    title="Please enter a number!"
                    required
                />
            </div>
        </div>
        <button class="btn btn-outline-light">Calculate</button>
    </form>
    <div style="height: 2.5em">
        <p class="border h-100 mx-auto w-50 bg-white text-dark">
            <%= result? result: ""; %>
        </p>
    </div>
</section>
<%- include("partials/foot") %>
