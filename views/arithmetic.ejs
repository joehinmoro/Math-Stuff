<%- include("partials/head.ejs") %>

<section class="container bg-dark mt-3 p-5 text-light text-center">
    <h2>Arithmetic Calculator</h2>

    <form action="/arithmetic" method="post">
        <div class="row g-3">
            <div class="col-sm-5">
                <input
                    type="text"
                    class="form-control"
                    name="num1"
                    placeholder="First Number"
                />
            </div>
            <div class="col-sm-2">
                <select name="operator" class="form-select" id="">
                    <option value="add">plus</option>
                    <option value="sub">minus</option>
                    <option value="mul">times</option>
                    <option value="div">divided by</option>
                    <option value="exp">raised to</option>
                    <option value="mod">modulus</option>
                </select>
            </div>
            <div class="col-sm-5">
                <input
                    type="text"
                    class="form-control"
                    name="num2"
                    placeholder="Last Number"
                />
            </div>
        </div>
        <button class="btn btn-outline-light">Calculate</button>
    </form>
    <div style="height: 2.5em">
        <p class="border h-100 mx-auto w-50 bg-white text-dark">
            <%= recentCalc.result? recentCalc.result: ""; %>
        </p>
    </div>
</section>
<%- include("partials/foot.ejs") %>
