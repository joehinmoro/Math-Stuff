<%- include("partials/head") %>
<section class="container text-light bg-dark mt-3 p-2">
    <h2>BMI Calculator</h2>
    <div class="container">
        <form method="post">
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-auto col-form-label"
                    >Your Weight(KG):
                </label>
                <div class="col-sm-3">
                    <input
                        type="text"
                        class="form-control"
                        id="inputEmail3"
                        name="weight"
                        value=""
                    />
                </div>
                <label
                    for="inputPassword3"
                    class="col-sm-auto col-form-label"
                    >Your Height(M):</label
                >
                <div class="col-sm-3">
                    <input
                        type="text"
                        class="form-control"
                        id="inputPassword3"
                        name="height"
                        value=""
                    />
                </div>
                <button type="submit" class="btn btn-primary col-sm-2">
                    Calculate
                </button>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-auto col-form-label"
                    >Your BMI:
                </label>
                <div class="col-sm-3">
                    <input
                        type="text"
                        class="form-control"
                        id="inputEmail3"
                        name="bmiNum"
                        value=""
                    />
                </div>
                <label
                    for="inputPassword3"
                    class="col-sm-auto col-form-label"
                    >Your Status:</label
                >
                <div class="col-sm-3">
                    <input
                        type="text"
                        class="form-control"
                        id="inputPassword3"
                        name="status"
                        value=""
                    />
                </div>
            </div>
        </form>
    </div>
</section>

