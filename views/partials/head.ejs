<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/bootstrap.css">
    <title>
        <%= viewTitle %>
    </title>
</head>
<body>
    <section class="bg-secondary min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">Math Stuff</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse " id="navbarNavAltMarkup">
                    <div class="navbar-nav ms-auto">
                        <% for (let navLink of navLinks.sort()) { %> 
                            <% if (navLink === viewName) { %>
                                <a class="nav-link active" href="/<%= navLink.toLowerCase() %>"><%= navLink %> </a>
                            <% } else { %>
                                <a class="nav-link" href="/<%= navLink.toLowerCase() %>"><%= navLink %> </a>
                            <% } %>
                            
                        <% } %> 
                    </div>
                </div>
            </div>
        </nav>
    </header>
    